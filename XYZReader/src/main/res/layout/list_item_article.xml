<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/material_baseline_grid_0.5x"
    android:layout_marginLeft="@dimen/material_baseline_grid_0.5x"
    android:layout_marginRight="@dimen/material_baseline_grid_0.5x"
    android:layout_marginTop="@dimen/material_baseline_grid_0.5x"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@color/photo_placeholder"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/article_title"
            style="@style/MaterialTypography.Regular.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="@dimen/material_baseline_grid_0.5x"
            android:paddingLeft="@dimen/material_baseline_grid_2x"
            android:paddingRight="@dimen/material_baseline_grid_2x"
            android:paddingTop="@dimen/material_baseline_grid_2x" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/MaterialTypography.Regular.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="@dimen/material_baseline_grid_2x"
            android:paddingLeft="@dimen/material_baseline_grid_2x"
            android:paddingRight="@dimen/material_baseline_grid_2x" />
    </LinearLayout>

</android.support.v7.widget.CardView>
